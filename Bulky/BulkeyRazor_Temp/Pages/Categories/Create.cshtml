@page
@model BulkeyRazor_Temp.Pages.Categories.CreateModel


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/>
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Category.Name"  class="pt-0"></label>
            <input asp-for="Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="row mb-3 p-1">
            <label asp-for="Category.DiplayOrder" class="pt-0"></label>
            <input asp-for="Category.DiplayOrder" class="form-control" />
            <span asp-validation-for="Category.DiplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control"> Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/index" class="btn btn-outline-secondary form-control">Back To List</a>
            </div>
        </div>
      
     @*   <div asp-validation-summary="All" ></div> *@
    </div>
</form>


@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}

